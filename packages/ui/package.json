{
  "name": "@onwo/ui",
  "version": "0.0.5-alpha",
  "url": "https://ui.onwo.cloud/",
  "description": "An ui library for qwik.js inspired by moon.io",
  "repository": "https://github.com/onwo-cloud/onwo-ui",
  "license": "MIT",
  "main": "./lib/index.qwik.mjs",
  "qwik": "./lib/index.qwik.mjs",
  "types": "./lib-types/index.d.ts",
  "keywords": [
    "tailwindcss",
    "ui-library",
    "qwik.js"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.qwik.mjs",
      "require": "./lib/index.qwik.cjs",
      "types": "./lib-types/index.d.ts"
    }
  },
  "files": [
    "lib",
    "lib-types"
  ],
  "engines": {
    "node": "^20.3.0"
  },
  "private": false,
  "type": "module",
  "scripts": {
    "build": "qwik build",
    "build.types": "tsc --emitDeclarationOnly",
    "build.lib": "vite build --mode lib",
    "dev": "vite build --mode lib -c ./vite.config.dev.ts",
    "lint": "eslint \"src/**/*.ts*\"",
    "lint.fix": "npm run lint -- --fix",
    "ts-watch": "tsc --emitDeclarationOnly --incremental --preserveWatchOutput --pretty --watch"
  },
  "devDependencies": {
    "@builder.io/qwik": "1.12.1",
    "@onwo/icons": "link:../icons",
    "@onwo/primitives": "link:../primitives",
    "@onwo/tailwindcss": "link:../tailwindcss",
    "@tailwindcss/vite": "^4.0.12",
    "@types/node": "20.14.11",
    "@types/tailwindcss": "^3.1.0",
    "chokidar": "^4.0.3",
    "np": "^8.0.4",
    "tailwindcss": "^4.0.12",
    "typescript": "5.4.5",
    "undici": "*",
    "vite": "5.3.5",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "peerDependencies": {
    "@onwo/icons": "*",
    "@onwo/primitives": "*",
    "@onwo/tailwindcss": "*"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.14"
  }
}
