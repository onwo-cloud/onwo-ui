{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["es2022", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "declaration": true,
    "declarationDir": "lib-types",
    "declarationMap": true,
    "outDir": "./lib",
    "moduleResolution": "Bundler",
    "incremental": true,
    "types": ["vite/client"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["./lib", "./lib-types"]
}
